<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10000000"
    android:padding="20dp"
    tools:context="com.example.administrator.molin.LoginActivity">

    <com.example.administrator.molin.yuanxing.CircleImageView
        android:id="@+id/login_top_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo_test" />

    <EditText
        android:id="@+id/login_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/login_top_img"
        android:layout_marginTop="20dp"
        android:background="@drawable/yuankuang"
        android:drawableLeft="@mipmap/login_user"
        android:hint="手机号" />

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_user"
        android:layout_marginTop="10dp"
        android:hapticFeedbackEnabled="true">

        <EditText
            android:id="@+id/login_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="@drawable/yuankuang"
            android:drawableLeft="@mipmap/login_password"
            android:hint="密码" />

        <ImageView
            android:id="@+id/login_xianshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/login_pass"
            android:layout_centerVertical="true"
            android:background="@mipmap/login_password_invisible" />
    </RelativeLayout>


    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativelayout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@mipmap/show_label"
        android:padding="20dp"
        android:text="登陆"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/login_forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="忘记密码" />

    <LinearLayout
        android:id="@+id/login_zhuce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还没有账号，立即去"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="#f0f"

            />

    </LinearLayout>
</RelativeLayout>
